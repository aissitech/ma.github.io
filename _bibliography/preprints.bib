@article{LHCb:2022nhk,
  abbr={arXiv},
  title={Measurement of antiproton production from antihyperon decays in \(p\rm{He}\) collisions at \(\sqrt{s_\rm{NN}}=110~\rm{GeV}\)},
  collaboration={LHCb Collaboration},
  author={null},
  abstract={The interpretation of cosmic antiproton flux measurements from space-borne experiments is currently limited by the knowledge 
            of the antiproton production cross-section in collisions between primary cosmic rays and the interstellar medium. Using collisions 
            of protons with an energy of \(6.5~\rm{TeV}\) incident on helium nuclei at rest in the proximity of the interaction region of the 
            LHCb experiment, the ratio of antiprotons originating from antihyperon decays to prompt production is measured for antiproton 
            momenta between \(12\) and \(110~\rm{GeV}/c\). The dominant antihyperon contribution, namely \(\bar{\Lambda} \to p^- \pi^+\) 
            decays from promptly produced \(\bar{\Lambda}\) particles, is also exclusively measured. The results complement the measurement 
            of prompt antiproton production obtained from the same data sample. At the energy scale of this measurement, the antihyperon 
            contributions to antiproton production are observed to be significantly larger than predictions of commonly used hadronic 
            production models.},
  arxiv={2205.09009},
  journal={arXiv preprint},
  year={2022},
  month={05},
  day={18},
  selected={false}
}

@article{LHCb:2022rlh,
  abbr={arXiv},
  title={Measurement of the prompt \(D^0\) nuclear modification factor in \(p\rm{Pb}\) collisions at \(\sqrt{s_\rm{NN}} = 8.16~\rm{TeV}\)},
  collaboration={LHCb Collaboration},
  author={null},
  abstract={The production of prompt \(D^0\) mesons in proton-lead collisions in the forward and backward configurations at a 
            center-of-mass energy per nucleon pair of \(\sqrt{s_\mathrm{NN}} = 8.16~\rm{TeV}\) is measured by the LHCb experiment. 
            The nuclear modification factor of prompt \(D^0\) mesons is determined as a function of the transverse momentum \(p_T\), 
            and rapidity in the nucleon-nucleon center-of-mass frame \(y^∗\). In the forward rapidity region, significantly suppressed 
            production is measured, which provides a stringent test of the nuclear parton distribution down to the very low Bjorken-\(x\) 
            region of \(\sim 10^{−6}\). In the backward rapidity region, a suppression with a significance of 2 - 4 standard deviations 
            compared to theoretical predictions is observed in the kinematic region of \(p_T > 6 \rm{GeV}/c\) and \(−3.25 < y^∗ < −2.5\).},
  arxiv={2205.03936},
  journal={arXiv preprint},
  year={2022},
  month={05},
  day={8},
  selected={false}
}

@article{LHCb:2022syj,
  abbr={arXiv},
  title={Evidence for modification of \(b\) quark hadronization in high-multiplicity \(pp\) collisions at \(\sqrt{s} = 13~\rm{TeV}\)},
  collaboration={LHCb Collaboration},
  author={null},
  abstract={The production rate of \(B^{0}_{s}\) mesons relative to \(B^{0}\) mesons is measured by the LHCb experiment in \(pp\) 
            collisions at a center-of-mass energy \(\sqrt{s} = 13~\rm{TeV}\) over the forward rapidity interval \(2 < y < 4.5\) 
            as a function of the charged particle multiplicity measured in the event. Evidence at the \(3.4 \sigma\) level is 
            found for an increase of the ratio of \(B^{0}_{s}\) to \(B^{0}\) cross-sections with multiplicity at transverse 
            momenta below \(6~\rm{GeV}/c\), with no significant multiplicity dependence at higher transverse momentum. 
            Comparison with data from \(e^{+} e^{−}\) collisions implies that the density of the hadronic medium may affect 
            the production rates of \(B\) mesons. This is qualitatively consistent with the emergence of quark coalescence 
            as an additional hadronization mechanism in high-multiplicity collisions.},
  arxiv={2204.13042},
  journal={arXiv preprint},
  year={2022},
  month={04},
  day={27},
  selected={false}
}

